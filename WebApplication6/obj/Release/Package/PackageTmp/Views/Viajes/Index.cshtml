@model IEnumerable<WebApplication6.Models.Viaje>

@{
    ViewBag.Title = "Index";
}
<div class="jumbotron">
    <h2 class="text-center container">Tus viajes</h2> 
</div>

<table class="table table-striped">
        <tr>
            <th scope="col" >
                @Html.DisplayNameFor(model => model.Origen)
            </th>
            <th scope="col" >
                @Html.DisplayNameFor(model => model.Destino)
            </th>
            <th scope="col" >
                @Html.DisplayNameFor(model => model.Costo)
            </th>
            <th scope="auto" ></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.Origen)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.Destino)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.Costo)
                </td>
                <td scope="row">
                  @Html.ActionLink("Detalles", "Details", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-warning" }) 
                </td>
            </tr>
        }
</table>
